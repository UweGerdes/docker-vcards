#uploadLayer.layer.upload-layer.hidden
  .layer-content.upload-layer-content

    h2.uploadHeadline VCF-Datei laden

    form#uploadForm.uploadForm(
      name='uploadForm',
      method='POST',
      action='/vcards/upload/',
      enctype="multipart/form-data")

      .file-container.upload-file-container
        label.label(for=upload)
          span&attributes({ 'data-filename-from': 'uploadFile' }) .vcf Datei w√§hlen
          input(
            type='file',
            id='uploadFile',
            class='file',
            name='vcfFile',
            accept='.vcf')
        input.uploadSubmit(type='submit', value='hochladen')
