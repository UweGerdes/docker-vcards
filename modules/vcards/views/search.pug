h2.subheadline Suchen
form#searchForm.searchForm(method='POST', action='')
  .searchFieldsContainer
    each label, name in labels
      div.checkboxContainer
        input.checkbox(type='checkbox', name='searchFields', value=name, id='search_' + name)
        label(for='search_' + name)
          = label
  .searchStringContainer
    input.searchString(type='text', name='searchString', placeholder='Suchwort', value='')
    #searchErrors.search-errors
    input.searchSubmit(type='submit', value='suchen...')
#searchResult.searchResult
