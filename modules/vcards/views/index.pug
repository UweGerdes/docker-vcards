extends ../../index.pug

block content
  div#vcardView.vcardView
    h1#headline.headline= title
      if vcard
        = " "
        = vcard.getValue('fn')
      if edit
        = " bearbeiten"
    #searchButton.button.searchButton&attributes({'data-toggle': '#searchLayer'}) suchen
    #content.content
      include list.pug
      if vcard
        if edit
          include item.pug
        else
          include item.pug
    #searchLayer.searchLayer.hidden
      .searchLayerContent
        include search.pug

append footer
  script(src='/js/vcards/script.js')
